<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.berict.application5.MainActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:weightSum="4"
        android:orientation="horizontal">

        <TableLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:stretchColumns="0, 1, 2"
            android:layout_weight="3">

            <TableRow android:layout_weight="1">

                <Button android:layout_height="match_parent" android:text="1" />

                <Button android:layout_height="match_parent" android:text="1" />

                <Button android:layout_height="match_parent" android:text="1" />

            </TableRow>

            <TableRow android:layout_weight="1">

                <Button android:layout_height="match_parent" android:text="1" />

                <Button android:layout_height="match_parent" android:text="1" />

                <Button android:layout_height="match_parent" android:text="1" />

            </TableRow>

            <TableRow android:layout_weight="1">

                <Button android:layout_height="match_parent" android:text="1" />

                <Button android:layout_height="match_parent" android:text="1" />

                <Button android:layout_height="match_parent" android:text="1" />

            </TableRow>

            <TableRow android:layout_weight="1">

                <Button android:layout_height="match_parent" android:text="1" />

                <Button android:layout_height="match_parent" android:text="1" />

                <Button android:layout_height="match_parent" android:text="1" />

            </TableRow>

        </TableLayout>

        <GridLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">

            <Button android:layout_rowWeight="1" android:layout_gravity="fill" android:text="DEL"/>

            <Button android:layout_rowWeight="1" android:layout_gravity="fill" android:text="X"/>

            <Button android:layout_rowWeight="1" android:layout_gravity="fill" android:text="/"/>

            <Button android:layout_rowWeight="1" android:layout_gravity="fill" android:text="-"/>

            <Button android:layout_rowWeight="1" android:layout_gravity="fill" android:text="+"/>

        </GridLayout>

    </LinearLayout>

</LinearLayout>
