<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.berict.application4.Test3Activity">

    <TableLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:stretchColumns="0, 1, 2">

        <TableRow android:layout_weight="1">

            <Button
                android:layout_height="match_parent"
                android:textSize="18sp"
                android:text="7" />

            <Button
                android:layout_height="match_parent"
                android:textSize="18sp"
                android:text="8" />

            <Button
                android:layout_height="match_parent"
                android:textSize="18sp"
                android:text="9" />
        </TableRow>

        <TableRow android:layout_weight="1">

            <Button
                android:layout_height="match_parent"
                android:textSize="18sp"
                android:text="4" />

            <Button
                android:layout_height="match_parent"
                android:textSize="18sp"
                android:text="5" />

            <Button
                android:layout_height="match_parent"
                android:textSize="18sp"
                android:text="6" />
        </TableRow>

        <TableRow android:layout_weight="1">

            <Button
                android:layout_height="match_parent"
                android:textSize="18sp"
                android:text="1" />

            <Button
                android:layout_height="match_parent"
                android:textSize="18sp"
                android:text="2" />

            <Button
                android:layout_height="match_parent"
                android:textSize="18sp"
                android:text="3" />
        </TableRow>

        <TableRow android:layout_weight="1">

            <Button
                android:layout_height="match_parent"
                android:textSize="18sp"
                android:text="#" />

            <Button
                android:layout_height="match_parent"
                android:textSize="18sp"
                android:text="0" />

            <Button
                android:layout_height="match_parent"
                android:textSize="18sp"
                android:text="*" />
        </TableRow>
    </TableLayout>

</RelativeLayout>
