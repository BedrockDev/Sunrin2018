<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.berict.test1.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:weightSum="2">

            <View
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/md_pink_500"
                android:layout_weight="1"/>

            <View
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/md_light_green_500"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:weightSum="2">

            <View
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/md_red_500"
                android:layout_weight="1"/>

            <View
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/md_teal_300"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:weightSum="3">

            <View
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/md_blue_500"
                android:layout_weight="1"/>

            <View
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/md_light_green_300"
                android:layout_weight="1"/>

            <View
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/md_teal_700"
                android:layout_weight="1"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
